@model LMS_WEB.Entities.BookEnt

@{
    ViewData["Title"] = "ViewBook";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="col-md-12 mb-4">
        <div class="card h-100" style="border: 1px solid #dee2e6; background-color: #f8f9fa; border-radius: 4px;">
            <div class="card-body position-relative">
                <!-- Botón para devolverse a la vista previa -->
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm position-absolute" style="top: 10px; left: 10px; border-radius: 2px;">
                    <i class="fa fa-arrow-left"></i> Volver
                </a>

                <!-- Estado de Disponibilidad -->
                <div class="position-absolute" style="top: 10px; right: 10px;">
                    @if (Model.availability_book)
                    {
                        <span class="badge bg-success text-white" style="border-radius: 2px;">
                            <i class="fa fa-check"></i> Disponible
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white" style="border-radius: 2px;">
                            <i class="fa fa-times"></i> No Disponible
                        </span>
                    }
                </div>

                <div class="row align-items-center h-100">
                    <!-- Imagen del Libro -->
                    <div class="col-md-3 text-center">
                        <img src="@Model.img_book" class="img-fluid" alt="@Model.title" style="max-height: 300px; object-fit: contain; border-radius: 4px;">
                    </div>

                    <!-- Detalles del Libro -->
                    <div class="col-md-9">
                        <h4 class="card-title mb-3" style="font-weight: 600;">@Model.title</h4>

                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <strong>Autor:</strong>
                                    <p class="mb-0">@Model.name_author</p>
                                </div>

                                <div class="mb-3">
                                    <strong>ISBN:</strong>
                                    <p class="mb-0">@Model.isbn</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Editorial:</strong>
                                    <p class="mb-0">@Model.publisher</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Año de Edición:</strong>
                                    <p class="mb-0">@Model.publication_date.ToString("d 'de' MMMM 'de' yyyy", new System.Globalization.CultureInfo("es-CR"))</p>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <strong>Materia:</strong>
                                    <p class="mb-0">@Model.subject_book</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Unidades:</strong>
                                    <p class="mb-0">@Model.quantity</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Idioma:</strong>
                                    <p class="mb-0">@Model.language_name</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Clasificación:</strong>
                                    <p class="mb-0">@Model.classification_name</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Tipo de Clasificación:</strong>
                                    <p class="mb-0">@Model.classification_type</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>