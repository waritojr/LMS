@model LMS_WEB.Entities.UserEnt


@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/template/images/logo.svg" alt="logo">
                </div>

                @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @*@ViewBag.MensajePantalla*@

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.password_prev, new { @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Anterior"})
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.password_user, new { @onkeypress="AvoidBlankSpace(event)", @onpaste="return false", @ondrop="return false", @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Nueva"})
                    </div>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Cambiar Contraseña">
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script src="~/js/scriptfunctions.js"></script>