@model LMS_WEB.Entities.UserEnt

@{
    ViewData["Title"] = "ChangeTempKey";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo d-flex justify-content-center w-100 mb-4">
                    <svg width="220" height="60" xmlns="http://www.w3.org/2000/svg">
                        <!-- Fondo blanco con bordes redondeados -->
                        <rect width="100%" height="100%" fill="#FFFFFF" rx="10" ry="10" />

                        <!-- Ícono de estantería de libros -->
                        <path d="M10 5V3C10 1.89543 10.8954 1 12 1H18C19.1046 1 20 1.89543 20 3V5H10ZM8 5H4C2.89543 5 2 5.89543 2 7V19C2 20.1046 2.89543 21 4 21H20C21.1046 21 22 20.1046 22 19V7C22 5.89543 21.1046 5 20 5H16V7C16 8.10457 15.1046 9 14 9H12C10.8954 9 10 8.10457 10 7V5H8ZM12 3H18V5H12V3ZM4 7H20V19H4V7Z" fill="#4B49AC" transform="translate(10, 10)" />

                        <!-- Texto "Biblioteca" -->
                        <text x="50" y="35" font-size="24" fill="#4B49AC" font-family="'Georgia', serif" font-weight="600">Biblioteca</text>

                        <!-- Texto "Isaac Felipe Azofeifa" -->
                        <text x="50" y="50" font-size="14" fill="#666" font-family="'Georgia', serif" font-weight="400">Isaac Felipe Azofeifa</text>
                    </svg>
                </div>

                @using (Html.BeginForm("ChangeTempKey", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @ViewBag.MensajePantalla

                    @Html.HiddenFor(m => m.id_user_auth)

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.password_temp, new { @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Temporal" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.password_user, new { @class="form-control form-control-lg", @type="password", @placeholder="Contraseña Nueva"})
                    </div>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Cambiar Contraseña">
                    </div>
                }

            </div>
        </div>
    </div>
</div>