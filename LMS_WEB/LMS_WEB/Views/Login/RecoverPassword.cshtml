
@{
    ViewData["Title"] = "RecoverPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/template/images/logo.svg" alt="logo">
                </div>
                <h4>Recuperar Contraseña</h4>
                <h6 class="font-weight-light">Ingresa tu usuario o correo para enviar el link de cambio de clave.</h6>

                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <div class="form-group">
                        <input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Usuario / Correo">

                    </div>
                    <div class="mt-3">
                        <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="@Url.Action("Index", "Login")">Recuperar Contraseña</a>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        Devolverse a <a href="@Url.Action("Login", "Login")" class="text-primary">Iniciar Sesión</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
