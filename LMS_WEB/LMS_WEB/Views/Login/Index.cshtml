
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row m-b-30">
    <!-- Sección de Descripción de la Biblioteca -->
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="card-title mb-0">Biblioteca Isaac Felipe Azofeifa</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text flex-grow-1">
                    Explora nuestra extensa colección de libros, que crece constantemente con contenidos de las editoriales y prensas universitarias.
                </p>
                <div class="text-center mt-3">
                    <a href="@Url.Action("BookCatalog", "Book")" class="btn btn-outline-primary btn-lg">
                        Ver Libros
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Búsquedas -->
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="card-title mb-0">Búsquedas Disponibles</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <p class="card-text flex-grow-1">
                    Utiliza nuestras herramientas de búsqueda para encontrar rápidamente los libros que necesitas.
                </p>
                <div class="text-center mt-3">
                    <a href="javascript:void(0);" class="btn btn-outline-primary btn-lg mb-2" style="min-width: 200px;">
                        Búsqueda Rápida
                    </a>
                    <a href="@Url.Action("AdvancedSearch", "Book")" class="btn btn-outline-primary btn-lg" style="min-width: 200px;">
                        Búsqueda Avanzada
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Estadísticas -->
    <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="card-title mb-0">Estadísticas</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <span class="fw-bold">Educación / General:</span> 7,417 títulos
                    </li>
                    <li class="mb-3">
                        <span class="fw-bold">Ciencias Políticas / General:</span> 4,871 títulos
                    </li>
                    <li class="mb-3">
                        <span class="fw-bold">Historia / General:</span> 4,660 títulos
                    </li>
                    <li class="mb-3">
                        <span class="fw-bold">Ciencias Sociales / General:</span> 4,116 títulos
                    </li>
                    <li class="mb-3">
                        <span class="fw-bold">Derecho / General:</span> 4,085 títulos
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>